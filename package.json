{
	"name": "cliplines",
	"displayName": "ClipLines",
	"description": "Clipping file lines and line numbers",
	"version": "0.0.1",
	"publisher": "hidenoritoki",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.clipLines"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.clipLines",
				"title": "Clip Lines"
			}
		],
		"keybindings": [
			{
				"command": "extension.clipLines",
				"key": "ctrl+alt+c",
				"when": "textInputFocus"
			}
		],
		"menus": {
			"editor/context": [{
				"when": "editorHasSelection",
				"command": "extension.clipLines",
				"group": "myGroup@1"
			}]
		},
		"configuration": {
			"type": "object",
			"title": "Clip Lines configuration",
			"properties": {
				"clipLines.lineNumberSeparater": {
					"type": "string",
					"default": "|",
					"scope": "window",
					"description": "Line number and text separator"
				},
				"clipLines.onlyIncludeRelativePath": {
					"type": "boolean",
					"default": true,
					"scope": "window",
					"description": "Include only relative paths"
				},
				"clipLines.enableMarkDownFormat": {
					"type": "boolean",
					"default": true,
					"scope": "window",
					"description": "Make text markdown"
				},
				"clipLines.includeFilepathInMarkDownSyntaxHighlight": {
					"type": "boolean",
					"default": false,
					"scope": "window",
					"description": "Include filepath to markdown text"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokihidenori/vscode_clip_lines.git"
  }
}
